@model Perevorot.Web.Models.LoginViewModel

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <!-- Bootstrap -->
    <link href="~/Content/Css/bootstrap.min.css" rel="stylesheet" media="screen">
    <link href="~/Content/Css/Perevorot.css" rel="stylesheet" media="screen">
    <link href="~/Content/Css/Preloader.css" rel="stylesheet" media="screen">

    <!-- Scripts -->
    <script src="~/Scripts/jquery-2.0.3.min.js" type="text/javascript"></script>
    <script src="~/Scripts/LoginPage/Login.js" type="text/javascript"></script>
    <title>Welcome to Perevorot</title>
</head>
<body>
    <div id="logo_Div">
                
    </div>
    @using (Html.BeginForm("Login", "Login", FormMethod.Post, new {@class = "form-signin", id = "loginForm"}))
    {
        <div id="login_Div">
            <h2 class="form-signin-heading">Please sign in</h2>
            <div class="input-group input-group-sm">
                @Html.TextBoxFor(x => x.UserName, new {@class = "form-control", placeholder = "Username"})

                @Html.PasswordFor(x => x.Password, new {@class = "form-control", placeholder = "Password"}) 
                <div id="login_submit">
                    <input type="button" value="Login" class="btn btn-lg btn-primary btn-block" />
                </div>
                <a id="register">Register new account</a>
            </div>

            <div>
                <h5 class="text-danger" id="result"></h5>
            </div>
        </div>
    }

    <div id="loading">
        <div id="application-preloader">
            <div class="windows8">
                <div class="wBall" id="wBall_1">
                    <div class="wInnerBall">
                    </div>
                </div>
                <div class="wBall" id="wBall_2">
                    <div class="wInnerBall">
                    </div>
                </div>
                <div class="wBall" id="wBall_3">
                    <div class="wInnerBall">
                    </div>
                </div>
                <div class="wBall" id="wBall_4">
                    <div class="wInnerBall">
                    </div>
                </div>
                <div class="wBall" id="wBall_5">
                    <div class="wInnerBall">
                    </div>
                </div>
            </div>
            <div class="clear"></div>                
        </div>
    </div>
</body>
