@model Perevorot.Web.Models.LoginModel

<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width" />

        <!-- Bootstrap -->
        <link href="~/Content/Css/bootstrap.min.css" rel="stylesheet" media="screen">
        <link href="~/Content/Css/Perevorot.css" rel="stylesheet" media="screen">

        <!-- Scripts -->
        <script src="~/Scripts/jquery-2.0.3.min.js" type="text/javascript"></script>
        <script src="~/Scripts/LoginPage/Login.js" type="text/javascript"></script>
        

        <title>Welcome to Perevorot</title>
    </head>
    <body>
            <div id="logo_Div">
                
            </div>
        @using (Html.BeginForm("Login", "Login", FormMethod.Post, new {@class="form-signin", id="loginForm"}))
        {            
            <div id="login_Div">                
                <h2 class="form-signin-heading">Please sign in</h2>

                <div class="input-group input-group-sm">

                    @Html.TextBoxFor(x => x.UserName, new {@class = "form-control", placeholder = "Username"})

                    @Html.PasswordFor(x => x.Password, new {@class = "form-control", placeholder = "Password"}) 
                            
                    <div id="login_submit">
                        <input type="button" value="Login" class="btn btn-lg btn-primary btn-block"/>    
                    </div>
                </div>   

                <div><h5 class="text-danger" id="result"></h5></div>
            </div>
        }

    </body>
</html>